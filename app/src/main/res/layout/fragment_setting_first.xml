<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorText"
    android:layout_height="match_parent"
    tools:context="com.app.yaraan.fragments.SettingFirst">
    <android.support.design.widget.AppBarLayout
        android:background="@color/appbar_lay_setting"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/more_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgCloseS"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:text="More"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/ic_appname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:background="#F0F0F0"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorBlack"
                android:text="Yarran"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnLog"
                android:text="signup"
                android:layout_gravity="center"
                android:background="@drawable/btnbackground"
                android:ems="12"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"></View>
            <LinearLayout
                android:id="@+id/lnrprofile"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:weightSum="3"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_profileicon_sel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.app.yaraan.fontsetting.textview.TextViewChangeMedium
                    android:textSize="17sp"
                    android:layout_weight="2"
                    android:text="Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:background="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"></View>
            <LinearLayout
                android:id="@+id/lnrSetting"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                >
                <ImageView
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.app.yaraan.fontsetting.textview.TextViewChangeMedium
                    android:textSize="17sp"
                    android:layout_weight="2"
                    android:text="Setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:background="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"></View>
            <LinearLayout
                android:id="@+id/lnrHelp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:weightSum="3"
                android:layout_width="match_parent">
                <ImageView
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.app.yaraan.fontsetting.textview.TextViewChangeMedium
                    android:textSize="17sp"
                    android:layout_weight="2"
                    android:text="Help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"></View>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
