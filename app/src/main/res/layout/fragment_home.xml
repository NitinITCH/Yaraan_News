<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.app.yaraan.fragments.HomeFragment">
    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:id="@+id/linearFirst"
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/homeImage"
                android:layout_width="match_parent"
                android:layout_height="240dp" />
            <LinearLayout
                android:id="@+id/linearSecond"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="155dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/txtClock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#ffff" />
                    <Space
                        android:layout_width="2dp"
                        android:layout_height="1dp" />
                    <ImageView
                        android:id="@+id/imgLastClock"
                        android:layout_gravity="center_vertical"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="right"
                        android:text="sdfsffsdf"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/textAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/imgAuthor"
                        android:layout_width="21dp"
                        android:layout_height="19dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#ffff"
                            android:id="@+id/txtnewsLikeHead"
                            android:text="10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="1dp" />
                        <ImageView
                            android:src="@drawable/ic_like_sel"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />
                        <Space
                            android:layout_width="9dp"
                            android:layout_height="1dp" />
                        <TextView
                            android:textColor="#ffff"
                            android:id="@+id/txtCommentHead"
                            android:text="3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="1dp" />
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_chat_sel"
                            />
                        <Space
                            android:layout_width="9dp"
                            android:layout_height="1dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:id="@+id/txtHeadMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="end"
                            android:text="hello this dummy"
                            android:textColor="#ffff" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerHome"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

