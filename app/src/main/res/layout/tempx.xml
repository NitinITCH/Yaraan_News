<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <LinearLayout
            android:weightSum="1"
            android:orientation="vertical"
            android:id="@+id/linearFirst"
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imgHead"
                 android:layout_width="match_parent"
                android:layout_height="220dp" />



                <LinearLayout
                    android:id="@+id/linearSecond"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="160dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:weightSum="2"
                        android:gravity="end"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorWhite"
                            android:id="@+id/txtHeadAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="1dp" />

                        <ImageView
                            android:id="@+id/imgHeadAuth"
                            android:layout_width="26dp"
                            android:layout_height="26dp" />

                    </LinearLayout>


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/txtClock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="#ffff" />
                        <Space
                            android:layout_width="2dp"
                            android:layout_height="1dp" />
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_clock_sel" />


                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#ffff"
                        android:id="@+id/txtnewsLikeHead"
                        android:text="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="1dp" />
                    <ImageView
                        android:src="@drawable/ic_like_sel"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <Space
                        android:layout_width="9dp"
                        android:layout_height="1dp" />
                    <TextView
                        android:textColor="#ffff"
                        android:id="@+id/txtCommentHead"
                        android:text="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="1dp" />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_chat_sel"
                       />
                    <Space
                        android:layout_width="9dp"
                        android:layout_height="1dp" />

                </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textStyle="bold"
                                android:id="@+id/txtHeadMain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="end"
                                android:text="hello this dummy"
                                android:textColor="#ffff" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
        </FrameLayout>
    </LinearLayout>



    <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:weightSum="3"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_marginRight="12dp"
                android:layout_weight="2.3"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorHead"
                    android:gravity="start"
                    android:textSize="15sp"
                    android:lines="2"
                    android:id="@+id/txtTitle"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linearLike"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/txtnewsLike"
                        android:text="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Space
                        android:layout_width="2dp"
                        android:layout_height="1dp" />
                    <ImageView
                        android:id="@+id/imgLike"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/likeimageheart"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <Space
                        android:layout_width="2dp"
                        android:layout_height="1dp" />
                    <TextView
                        android:textColor="@color/colorText"
                        android:id="@+id/txtComment"
                        android:text="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="1dp" />
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_chat"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="1dp" />

                </LinearLayout>
                    <LinearLayout
                        android:gravity="end"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorText"
                        android:id="@+id/txtDay"
                        android:text="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="9dp"
                    android:weightSum="2"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:src="@drawable/imagestate"
                        android:id="@+id/imgAuth"
                        android:layout_width="26dp"
                        android:layout_height="26dp" />

                </LinearLayout>
            </LinearLayout>

        <ImageView
            android:layout_weight="0.8"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:id="@+id/imgSubhead"
            android:layout_width="0dp"
            android:layout_height="80dp" />
    </LinearLayout>
</LinearLayout>
